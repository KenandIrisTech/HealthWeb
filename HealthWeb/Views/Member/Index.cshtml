@using Syncfusion.EJ2
@using Syncfusion.EJ2.Navigations
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutKinHealthMemberDemo.cshtml";
}



<div class="">
    @Html.EJS().DashboardLayout("mainDeshboard").Columns(4).CellSpacing(new double[] { 5, 5 }).AllowDragging(false).Panels(panel =>
{
    panel.Row(0).Col(0).SizeX(1).SizeY(1).Id("phr-demographics").Content("#phrDemographics").Enabled(true).Add();
    panel.Row(0).Col(1).SizeX(1).SizeY(1).Id("phr-ediary").Content("#phrEDiary").Enabled(true).Add();
    panel.Row(0).Col(2).SizeX(1).SizeY(1).Id("phr-medications").Content("#phrMedications").Enabled(true).Add();
    panel.Row(0).Col(3).SizeX(1).SizeY(1).Id("phr-vitalsigns").Content("#phrVitalSigns").Enabled(true).Add();

    panel.Row(1).Col(0).SizeX(1).SizeY(1).Id("phr-labexams").Content("#phrLabExams").Enabled(true).Add();
    panel.Row(1).Col(1).SizeX(1).SizeY(1).Id("phr-appointments").Content("#phrAppointments").Enabled(true).Add();
    panel.Row(1).Col(2).SizeX(1).SizeY(1).Id("phr-problems").Content("#phrProblems").Enabled(true).Add();
    panel.Row(1).Col(3).SizeX(1).SizeY(1).Id("phr-allergies").Content("#phrAllergies").Enabled(true).Add();

    panel.Row(2).Col(0).SizeX(1).SizeY(1).Id("phr-vaccinations").Content("#phrVaccinations").Enabled(true).Add();
    panel.Row(2).Col(1).SizeX(1).SizeY(1).Id("phr-procedures").Content("#phrProcedures").Enabled(true).Add();
    panel.Row(2).Col(2).SizeX(1).SizeY(1).Id("phr-qualityoflife").Content("#phrQualityOfLife").Enabled(true).Add();
    panel.Row(2).Col(3).SizeX(1).SizeY(1).Id("phr-settings").Content("#phrSettings").Enabled(true).Add();
}).AllowDragging(false).AllowFloating(true).ShowGridLines(false).CellAspectRatio(1.4).Render()
</div>

<template id="phrDemographics">
    @Html.Partial("PhrDemographics")
</template>

<template id="phrEDiary">
    @Html.Partial("PhrEDiary")
</template>


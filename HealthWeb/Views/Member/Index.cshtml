    @Html.Partial("PhrSettings")
</template>


@section scripts 
{
    <script type="text/javascript">
        var mainDashboardInstance;
        $(function () {
            mainDashboardInstance = document.getElementById('mainDeshboard').ej2_instances[0];
            //mainpageDeshboardInstance.refresh();
            //console.log(mainpageDeshboardInstance);
            $('#mainDeshboard > .e-panel').not('.e-disabled').click(function (e) {
                // click panel event
                var panel = $(e.target).parents('.e-panel');
                if (panel.length) {
                    switch (panel[0].id) {
                        case 'phr-vitalsigns':
                            window.location.href = 'Member/VitalSigns';
                            break;
                    }
                }
            });

        });
    </script>
}



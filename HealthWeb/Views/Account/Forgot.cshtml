@using Syncfusion.EJ2
@{
    ViewBag.Title = "Forgot";
    Layout = "~/Views/Shared/_LayoutChildPage.cshtml";
}

<div class="flex-container-vertical" style="max-width:400px; height:600px; justify-content:center;">
    <div class="flex-container-vertical" style="">
        <div class="flex-item" style="align-self:center;font-weight:bold; font-size:1.2em;"><label>忘記了您的密碼了嗎?</label></div>
        <div class="flex-item" style="align-self:center"><label>我們將會送出通知到你的電子郵箱，告訴您如何重置您的密碼。</label></div>
        <div class="flex-item">
            @Html.EJS().TextBox("email").Placeholder("電子郵件").Type("email").FloatLabelType(Syncfusion.EJ2.Inputs.FloatLabelType.Auto).Render()
        </div>
        <div class="flex-item">
            @Html.EJS().Button("send").Content("送出密碼").CssClass("flext-item flex-item-fullrow e-primary").Render()
        </div>
        <div class="flex-item" style="align-self:flex-end;">
            <label>還沒有帳號 ? </label>@Html.EJS().Button("signup").Click("signup").IsPrimary(true).Content("按我註冊").CssClass("e-outline e-small").Render()
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        function signup() {
            window.location.href = '/Account/SignUp';
        }
    </script>
}

<style type="text/css">

    .flex-container-vertical {
        display: flex;
        flex-flow: column;
    }

    .flex-container-horizontal {
        display: flex;
        flex-flow: row;
    }

    .flex-item {
        display: flex;
        line-height: 36px;
    }

    .flex-item label {
        color: #454545;
    }

    .flex-item-fullrow {
        width: 100%;
    }

    .facebook-style {
        color: white;
        background-color: #3b5998;
    }

    .line-style {
        color: white;
        background-color: #00c300;
    }

    .flex-item button {
        border-radius: 16px 16px;
        margin: 6px 0;
    }
</style>


